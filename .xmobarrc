Config { overrideRedirect = False
       , font     = "xft:Ubuntu Mono:size=12:bold:antialias=true"
       , bgColor  = "#282a36"
       , fgColor  = "#6272a4"
       , position = TopW L 90
       , commands = [ Run Weather "EGPF"
                        [ "--template", "<weather> <tempC>Â°C"
                        , "-L", "0"
                        , "-H", "25"
                        , "--low"   , "#66ff99"
                        , "--normal", "#ff8c69"
                        , "--high"  , "#ea3c53
                        ] 36000
                    , Run Cpu
                        [ "-L", "3"
                        , "-H", "50"
                        , "--high"  , "#ea3c53"
                        , "--normal", "#ff8c69"
                        , "--low"   , "#66ff99"
                        ] 10
                    , Run Alsa "default" "Master"
                        [ "--template", "<volumestatus>"
                        , "--suffix"  , "True"
                        , "--"
                        , "--on", ""
                        ]
                    , Run Memory ["--template", "Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run Date "%a %Y-%m-%d <fc=#8be9fd>%H:%M</fc>" "date" 10
                    , Run XMonadLog
                    ]
       , sepChar  = "%"
       , alignSep = "}{"
       , template = "%XMonadLog% }{ %alsa:default:Master% | %cpu% | %memory% | %EGPF% | %date% "
       }

